# Firebase Configuration (Development/Emulator)
# Copy this file to .env.local and fill in your values

# Firebase Project Configuration
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_API_KEY=your-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Development Environment Settings
EXPO_PUBLIC_NODE_ENV=development
EXPO_PUBLIC_DEBUG_MODE=true

# Emulator Configuration
EXPO_PUBLIC_EMULATOR_HOST=localhost

# Backend API Configuration
EXPO_PUBLIC_BACKEND_URL=http://localhost:5001/your-project-id/us-central1/api
EXPO_PUBLIC_API_VERSION=v1

# OAuth Configuration (for production)
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-google-web-client-id
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASHLYTICS=false
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Development Settings
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_MOCK_API_RESPONSES=false
EXPO_PUBLIC_BYPASS_AUTH=false

# Weather API Configuration
# OpenWeatherMap API Key (Optional - for professional weather features)
# Sign up at: https://openweathermap.org/api
# Free tier: 1,000 calls/day, Paid plans: $40+/month
EXPO_PUBLIC_OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# NOAA API (No key required - free public API)
# Used for tide data in Hong Kong waters
EXPO_PUBLIC_NOAA_API_KEY=

# Racing Area Coordinates (Optional - defaults provided)
# Hong Kong Dragon Worlds racing area coordinates
EXPO_PUBLIC_RACING_AREA_LAT=22.3500
EXPO_PUBLIC_RACING_AREA_LON=114.2500