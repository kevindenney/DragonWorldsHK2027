    },
    "jsc-test": {
      "distribution": "internal",
      "ios": {
        "resourceClass": "m-medium",
        "simulator": true,
        "buildConfiguration": "Debug"
      },
      "android": {
        "resourceClass": "medium",
        "gradleCommand": ":app:assembleDebug"
      },
      "channel": "jsc-test",
      "env": {
        "NODE_ENV": "development",
        "EXPO_USE_HERMES": "false",
        "FORCE_JSC": "true"
