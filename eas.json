    "production-android": {
      "extends": "production",
      "android": {
        "resourceClass": "medium",
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      },
      "env": {
        "API_URL": "https://api.dragonworlds.com",
        "WEATHER_API_URL": "https://weather-api.dragonworlds.com",
        "ANALYTICS_ENABLED": "true",
        "SENTRY_ENABLED": "true"
