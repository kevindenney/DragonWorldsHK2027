{
  "name": "dragonworldshk2027-firebase-backend",
  "version": "1.0.0",
  "description": "Firebase backend for DragonWorldsHK2027 sailing mobile application",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "dev:watch": "nodemon --exec ts-node src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "firebase:serve": "firebase emulators:start",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules,storage",
    "functions:build": "npm run build --prefix functions",
    "functions:serve": "npm run build --prefix functions && firebase emulators:start --only functions",
    "functions:shell": "npm run build --prefix functions && firebase functions:shell",
    "functions:logs": "firebase functions:log",
    "db:seed": "ts-node scripts/seedDatabase.ts",
    "db:migrate": "ts-node scripts/migrate.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp -r src/config/serviceAccountKey.json dist/config/ || true"
  },
  "keywords": [
    "firebase",
    "dragonworlds",
    "hk2027",
    "sailing",
    "mobile-app",
    "typescript",
    "authentication",
    "express",
    "backend",
    "api",
    "firestore"
  ],
  "author": "Firebase Backend Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^4.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "axios": "^1.6.2",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "typescript": "^5.3.2",
    "@types/node": "^20.9.1",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.16",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/jest": "^29.5.8",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "firebase-tools": "^12.9.1",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/config/**/*",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"]
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,json",
    "ignore": ["src/**/*.test.ts", "src/**/*.spec.ts"],
    "exec": "ts-node src/app.ts"
  }
}